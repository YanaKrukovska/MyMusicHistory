<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_start"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/start_date_message" />

        <EditText
            android:id="@+id/startDate"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_view_end"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/end_date_message" />

        <EditText
            android:id="@+id/endDate"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:textSize="15sp" />


        <ImageButton
            android:id="@+id/button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:src="@drawable/ic_search_button_foreground" />

    </LinearLayout>

    <include layout="@layout/top_songs" />

</LinearLayout>
